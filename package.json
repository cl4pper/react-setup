{
  "name": "react-setup",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "run:dev": "webpack-dev-server --host 0.0.0.0 --port 8080 --mode development",
    "app:start": "docker-compose up -d",
		"app:stop": "docker-compose stop",
    "lint": "prettier --write '**/*.ts' '**/*.tsx' '**/*.test.tsx' '**/*.scss' '**/*.html'",
    "test:all": "jest --coverage --verbose=true --config ./jest.config.json",
    "test:watch": "jest --watchAll --config ./jest.config.json",
    "test:components": "jest --coverage --verbose=true ./src/components --config ./jest.config.json",
    "build": "webpack --config webpack.config.js --mode production"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "babel-loader": "^8.2.3",
    "classnames": "^2.3.1",
    "css-loader": "^6.5.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "node-sass": "^7.0.1",
    "prettier": "^2.6.1",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0"
  }
}
